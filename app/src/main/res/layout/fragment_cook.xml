<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CookFragment">

    <LinearLayout
        android:id="@+id/linear_layout_open_orders"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/fragBar_btnForwardFirst"
            android:background="@drawable/custom_button"
            android:layout_margin="2dp"
            android:src="@drawable/arrow_img_right"
            android:scaleType="fitCenter" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/fragBar_btnBackwardFirst"
            android:background="@drawable/custom_button"
            android:layout_margin="2dp"
            android:src="@drawable/arrow_img_left"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_inprogress_orders"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/fragBar_btnForwardSecond"
            android:background="@drawable/custom_button"
            android:layout_margin="2dp"
            android:src="@drawable/arrow_img_right"
            android:scaleType="fitCenter" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/fragBar_btnBackwardSecond"
            android:background="@drawable/custom_button"
            android:layout_margin="2dp"
            android:src="@drawable/arrow_img_left"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_finished_orders"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"/>

</LinearLayout>